@model List<doan_qlDuan_CNTT.Areas.Store.Models.CartItem>

@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Areas/Store/Views/Shared/_Layout.cshtml";
}



<div class="container">
    @if (Model == null || Model.Count == 0)
    {
        <div class="spec ">
            <h3>Giỏ hàng</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>
        <p class="text-info text-center" style="font-size:25px;">
            Giỏ hàng của bạn trống!
        </p>
    }
    else
    {
        <div class="spec ">
            <h3>Giỏ hàng</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>
        float total = 0;
        int i = 0;
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <th>Hình</th>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <img src="~/HinhAnh/@Url.Content(item.SanPham.HinhAnh)"
                                         alt="HinhAnh"
                                         width="100"
                                         height="80" />
                                </td>
                                <td>@*<a target="_blank" href="@Url.Action("Detail", "Store", new { id = item.SanPham.Id })" style="font-size:medium;">*@ @item.SanPham.TenSP @*</a>*@ </td>
                                <td>
                                    <form id="formSoluong_@i" action="@Url.Action("SuaSoLuong","GioHang")" method="get">
                                        <input type="hidden" name="SanPhamID" value="@item.SanPham.MaSP" />
                                        <input class="col-lg-4" style="height:30px;" type="number" min="1" step="1" name="soluongmoi" value="@item.Sl" onchange="$('#formSoluong_@i').submit();" />
                                    </form>
                                </td>
                                <td> @(item.SanPham.DonGiaMua) </td>
                                <td> @(item.ThanhTien) </td>

                                <td> <a href="@Url.Action("XoaKhoiGio",new { SanPhamID = item.SanPham.MaSP})" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');" class="btn btn-danger btn-sm">Xóa</a> </td>
                            </tr>
                            i++;
                            total += @item.ThanhTien;
                        }
                        <tr>
                            <td></td>
                            <td class="text-right"></td>
                            <td></td>
                            <td class="text-right">Tổng thành tiền:</td>
                            <td style="font-size:large;">@total.ToString("#,##0") VNĐ </td>
                            <td><a href="@Url.Action("ThanhToan","ThanhToan")" role="button" class="btn btn-success" style="background-color:red">Thanh toán</a></td>
                        </tr>
                    </table>
                </div>

            </div>

        </div>
    }
    <div>
    <tr>
        <td></td>
        <td class="text-left"></td>
        <td></td>
        
        <td><a href="@Url.Action("SanPham","Home")" role="button"
               class="btn btn-success" style="background-color:lightpink">Tiếp tục mua hàng</a></td>
    </tr>
</div>
</div>

