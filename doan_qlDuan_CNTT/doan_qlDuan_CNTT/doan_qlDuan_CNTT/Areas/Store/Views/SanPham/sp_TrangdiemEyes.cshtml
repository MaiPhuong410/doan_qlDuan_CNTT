@model IEnumerable<doan_qlDuan_CNTT.Areas.Store.ViewModels.SanPhamViewModel>

@{
    ViewBag.Title = "Trang điểm mắt";
    Layout = "~/Areas/Store/Views/Shared/_Layout.cshtml";
}

<h2>TRANG ĐIỂM MẮT</h2>

<p>
    @using (Html.BeginForm())
    {
        <str>
            <th>
                <p>@Html.TextBox("searchString") <input type="submit" value="Tìm Kiếm" style="background-color:lightpink" /></p>
            </th>
        </str>
    }
    </p>
    <table class="table">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.HinhAnh)*@
                <p class="text-center">Ảnh minh họa</p>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.TenSP)*@
                <p class="text-center">Tên sản phẩm</p>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.DonGiaMua)*@
                <p class="text-center">Giá bán</p>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.XuatXu)*@
                <p class="text-center">Xuất xứ</p>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.MoTa)*@
                <p class="text-center">Mô tả</p>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @*@Html.DisplayFor(modelItem => item.HinhAnh)*@
                    <img src="~/Images/@Url.Content(item.HinhAnh)"
                         alt="HinhAnh"
                         width="100"
                         height="80" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGiaMua)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.XuatXu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    <a class="btn btn-success" href="@Url.Action("xemChitiet_SP_eyes", "SanPham", new { id = item.MaSP })" style="background-color:lightpink">
                        Xem chi tiết
                    </a>
                </td>
                <td>
                    <a class="btn btn-success" href="@Url.Action("ThemVaoGio","GioHang", new { id = item.MaSP })" style="background-color:lightpink">
                        Thêm vào giỏ
                    </a>
                </td>
            </tr>
        }

    </table>
