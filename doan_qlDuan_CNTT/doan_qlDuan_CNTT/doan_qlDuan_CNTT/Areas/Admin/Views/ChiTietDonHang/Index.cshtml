@model IEnumerable<doan_qlDuan_CNTT.Areas.Admin.Models.CTDONHANG>

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Chi tiết đơn hàng</h2>
<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "DonHang")
</div>
<div class="panel-collapse">
    <div class="table-responsive table-bordered">
        <table class="table">
            <thead>
                <tr>
                    <th>Mã đơn hàng</th>
                    <th>Mã sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền<th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MaDH)</td>
                        <td>@Html.DisplayFor(modelItem => item.MaSP)</td>
                        <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                        <td>@Html.DisplayFor(modelItem => item.DGBan)</td>
                        <td>@Html.DisplayFor(modelItem => item.ThanhTien)</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.table-responsive -->
</div>
<!-- /.panel-body -->