@model doan_qlDuan_CNTT.Areas.Admin.Models.NHACUNGCAP

@{
    ViewBag.Title = "Cập nhật nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật nhà cung cấp</h2>
<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Provider")
</div>
@using (Html.BeginForm("Edit", "Provider", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaNCC)
        <div class="text-success">
            @ViewBag.EditPdcError
        </div>
        <div class="form-group col-lg-5">
            <label>Tên nhà cung cấp</label>
            @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên nhà cung cấp..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.TenNCC)</div>
            <label>Địa chỉ nhà cung cấp</label>
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập địa chỉ nhà cung cấp..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.DiaChi)</div>
            <label>Số điện thoại</label>
            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập số điện thoại nhà cung cấp..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.SDT)</div>
            <label>Địa chỉ Email</label>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập email nhà cung cấp..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.Email)</div>
            <br />
            <input type="submit" value="Cập nhật" class="btn btn-default" />
        </div>
    </div>
}


