@model IEnumerable<doan_qlDuan_CNTT.Areas.Admin.Models.XemDonHangResult>

@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Đơn hàng</h2>
<div class="col-lg-12">
    <div class="panel panel-default">
        <!-- /.panel-heading -->
        <div class="panel-collapse">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Ngày mua</th>
                            <th>Ngày dự kiến giao</th>
                            <th>Tình trạng</th>
                            <th>Mã khách hàng <th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MaDH)</td>
                            <td>@Html.DisplayFor(modelItem => item.NgayMua)</td>
                            <td>@Html.DisplayFor(modelItem => item.NgayDuKienGiao)</td>
                            <td>@Html.DisplayFor(modelItem => item.TinhTrang)</td>
                            <td>@Html.DisplayFor(modelItem => item.MaKH)</td>
                            <td>
                                @*<a href="@Url.Action("Edit", "DonHang", new { mdh = item.MaDH })"><i class="fa fa-pencil fa-fw"></i></a>|*@
                                <a href="@Url.Action("Index", "ChiTietDonHang", new { mdh = item.MaDH })"><i class="fa fa-list-alt fa-fw"></i></a>
                                <a onclick="return confirm('Bạn có chắc chắn muốn xoá đơn hàng này?')" href="@Url.Action("Delete", "DonHang", new { mdh = item.MaDH })"><i class="fa fa-times fa-fw"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
