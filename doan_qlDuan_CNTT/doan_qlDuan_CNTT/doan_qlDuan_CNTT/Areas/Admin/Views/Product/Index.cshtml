@model IEnumerable<doan_qlDuan_CNTT.Areas.Admin.Models.SANPHAM>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sản phẩm</h2>

<div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <a class="btn btn-primary btn-default" href="@Url.Action("Create", "Product")" role="button">Tạo sản phẩm mới</a>
            <div class="form-group input-group navbar-right">
                @using (Ajax.BeginForm("Index", "Product", new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "Get" }))
                {
                    <input type="search" name="name" class="form-control" style="width:300px" placeholder="Nhập tên sản phẩm..." />
                    <button class="btn btn-success" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                }
            </div>
        </div>
        <div class="panel-body" style="width:100%;height:500px;overflow:auto;">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Dung tích</th>
                            <th>Đơn giá</th>
                            <th>Loại sản phẩm</th>
                            <th>Nhà cung cấp</th>
                            <th>Thương hiệu</th>
                            <th>Hình ảnh</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DungTich)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DonGiaMua)
                            </td>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.MaLoai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaNCC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaTH)
                            </td>
                            <td>
                                <img src="~/Images/@Url.Content(item.HinhAnh)"
                                     alt="HinhAnh"
                                     width="100"
                                     height="80" />
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Product", new { id = item.MaSP })"><i class="fa fa-pencil fa-fw"></i></a>|
                                <a href="@Url.Action("Details", "Product", new { id = item.MaSP })"><i class="fa fa-list-alt fa-fw"></i></a>|
                                <a onclick="return confirm('Bạn có chắc chắn muốn xoá sản phẩm này?')" href="@Url.Action("Delete", "Product", new { id = item.MaSP })"><i class="fa fa-times fa-fw"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
