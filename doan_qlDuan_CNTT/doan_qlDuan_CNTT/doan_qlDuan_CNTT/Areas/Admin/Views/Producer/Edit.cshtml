@model doan_qlDuan_CNTT.Areas.Admin.Models.THUONGHIEU

@{
    ViewBag.Title = "Cập nhật thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật thương hiệu</h2>

<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Producer")
</div>
@using (Html.BeginForm("Edit", "Producer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaTH)
        <div class="text-success">
            @ViewBag.EditPdcError
        </div>
        <div class="form-group col-lg-5">
            <label>Tên thương hiệu</label>
            @Html.EditorFor(model => model.TenTH, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên thương hiệu..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.TenTH)</div>
            <br />
            <input type="submit" value="Cập nhật" class="btn btn-default" />
        </div>
    </div>
}
