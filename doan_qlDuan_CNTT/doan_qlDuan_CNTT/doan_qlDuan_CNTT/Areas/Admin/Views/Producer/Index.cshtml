@model IEnumerable<doan_qlDuan_CNTT.Areas.Admin.Models.THUONGHIEU>

@{
    ViewBag.Title = "Danh sách thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thương hiệu</h2>
<div class="text-warning">
    @ViewBag.PdcError
</div>
<hr />
<div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <a class="btn btn-primary btn-default" href="@Url.Action("Create", "Producer")" role="button">Thêm thương hiệu mới</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã thương hiệu</th>
                            <th>Tên thương hiệu</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MaTH)</td>
                            <td>@Html.DisplayFor(modelItem => item.TenTH)</td>
                            <td>
                                <a href="@Url.Action("Edit", "Producer", new { id = item.MaTH })"><i class="fa fa-pencil fa-fw"></i></a>|
                                <a onclick="return confirm('Bạn có chắc chắn muốn xoá thương hiệu này?')" href="@Url.Action("Delete", "Producer", new { id = item.MaTH })"><i class="fa fa-times fa-fw"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>